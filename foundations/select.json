        "radius": "var(--select-popover-radius)"
      },
      "item": {
        "height": "var(--select-item-height)",
        "padX": "var(--select-item-pad-x)",
        "radius": "var(--select-item-radius)",
        "bgFocused": "var(--select-item-focused-bg)",
        "bgPressed": "var(--select-item-pressed-bg)",
        "bgSelected": "var(--select-item-selected-bg)"
      }
    },
    "themes": "Cada tema define: --select-button-border, --select-button-color, --select-popover-color, --select-listbox-item-focused-background, --select-listbox-item-pressed-background, --select-listbox-item-selected-background."
  }
